<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="mainPane" minHeight="300.0" minWidth="300.0" prefHeight="600.0" prefWidth="600.0" styleClass="bg" stylesheets="@style.css" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.MainController">
   <children>
      <HBox alignment="CENTER" layoutX="200.0" layoutY="455.0" prefHeight="60.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <VBox prefHeight="200.0" prefWidth="170.0">
               <children>
                  <Button fx:id="admin" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#adminAccess" styleClass="button" stylesheets="@style.css" text="Admin">
                     <VBox.margin>
                        <Insets bottom="10.0" left="45.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </Button>
                  <PasswordField fx:id="adminPassword" onAction="#enterAdmin" prefHeight="25.0" prefWidth="100.0" promptText="Admin password">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </PasswordField>
                  <Label fx:id="adminLabel" alignment="CENTER" prefWidth="200.0" textAlignment="CENTER" textFill="#f20a0a">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </Label>
               </children>
               <HBox.margin>
                  <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
               </HBox.margin>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="170.0">
               <children>
                  <Button fx:id="cliente" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#clientAccess" styleClass="button" stylesheets="@style.css" text="Cliente">
                     <VBox.margin>
                        <Insets bottom="10.0" left="45.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </Button>
                  <TextField fx:id="clientCode" onAction="#enterClient" prefWidth="100.0" promptText="Codice cliente">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </TextField>
                  <Label fx:id="clientLabel" alignment="CENTER" prefWidth="200.0" textAlignment="CENTER" textFill="#f20a0a">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </Label>
               </children>
               <HBox.margin>
                  <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
               </HBox.margin>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
