<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="500.0" prefWidth="500.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.NewAppointmentController">
   <children>
      <HBox prefHeight="25.0" prefWidth="200.0">
         <children>
            <Label text=" * = campo obbligatorio" textFill="WHITE">
               <font>
                  <Font name="Times New Roman" size="16.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox prefHeight="25.0" prefWidth="200.0">
         <children>
            <Label fx:id="error" prefHeight="18.0" prefWidth="171.0" textFill="#e80606">
               <font>
                  <Font name="Times New Roman" size="15.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox prefHeight="40.0" prefWidth="200.0">
         <children>
            <Label prefHeight="23.0" prefWidth="337.0" text=" Barbiere effettuante*" textFill="WHITE">
               <font>
                  <Font name="Times New Roman" size="20.0" />
               </font>
            </Label>
            <TextField fx:id="fperformingBarber" prefWidth="440.0" styleClass="text" stylesheets="@style2.css">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox prefHeight="40.0" prefWidth="200.0">
         <children>
            <Label prefWidth="300.0" text=" Data*" textFill="WHITE">
               <font>
                  <Font name="Times New Roman" size="20.0" />
               </font>
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin>
            </Label>
            <DatePicker fx:id="pdate" prefHeight="26.0" prefWidth="402.0">
               <HBox.margin>
                  <Insets right="20.0" top="5.0" />
               </HBox.margin>
            </DatePicker>
         </children>
      </HBox>
      <HBox prefHeight="40.0" prefWidth="200.0">
         <children>
            <Label prefWidth="300.0" text=" Ora* (HH:MM:SS)" textFill="WHITE">
               <font>
                  <Font name="Times New Roman" size="20.0" />
               </font>
            </Label>
            <TextField fx:id="ftime" prefHeight="40.0" prefWidth="399.0" styleClass="text" stylesheets="@style2.css">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin></TextField>
         </children>
      </HBox>
      <HBox prefHeight="40.0" prefWidth="200.0">
         <children>
            <Label prefWidth="300.0" text=" Cliente prenotante*" textFill="WHITE">
               <font>
                  <Font name="Times New Roman" size="20.0" />
               </font>
            </Label>
            <TextField fx:id="fbookingClient" prefHeight="40.0" prefWidth="399.0" styleClass="text" stylesheets="@style2.css">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin></TextField>
         </children>
      </HBox>
      <HBox prefHeight="40.0" prefWidth="200.0">
         <children>
            <Label prefWidth="300.0" text=" Cliente effettuante" textFill="WHITE">
               <font>
                  <Font name="Times New Roman" size="20.0" />
               </font>
            </Label>
            <TextField fx:id="fperformingClient" prefHeight="40.0" prefWidth="400.0" styleClass="text" stylesheets="@style2.css">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin></TextField>
         </children>
      </HBox>
      <HBox prefHeight="40.0" prefWidth="200.0">
         <children>
            <Label prefWidth="300.0" text=" Barbiere prenotante*" textFill="WHITE">
               <font>
                  <Font name="Times New Roman" size="20.0" />
               </font>
            </Label>
            <TextField fx:id="fbookingBarber" prefHeight="40.0" prefWidth="398.0" styleClass="text" stylesheets="@style2.css">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin></TextField>
         </children>
      </HBox>
      <HBox prefHeight="40.0" prefWidth="200.0">
         <children>
            <Label prefWidth="300.0" text=" Numero scontrino" textFill="WHITE">
               <font>
                  <Font name="Times New Roman" size="20.0" />
               </font>
            </Label>
            <TextField fx:id="freceiptNumber" prefHeight="40.0" prefWidth="398.0" styleClass="text" stylesheets="@style2.css">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox prefHeight="40.0" prefWidth="200.0">
         <children>
            <Label prefWidth="300.0" text=" Data scontrino" textFill="WHITE">
               <font>
                  <Font name="Times New Roman" size="20.0" />
               </font>
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin>
            </Label>
            <DatePicker fx:id="preceiptDate" prefHeight="26.0" prefWidth="398.0">
               <HBox.margin>
                  <Insets right="20.0" top="5.0" />
               </HBox.margin>
            </DatePicker>
         </children>
      </HBox>
      <HBox prefHeight="40.0" prefWidth="200.0">
         <children>
            <Button fx:id="save" mnemonicParsing="false" onMouseClicked="#saveAppointment" stylesheets="@style2.css" text="Salva">
               <HBox.margin>
                  <Insets bottom="60.0" left="100.0" right="80.0" top="40.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="close" mnemonicParsing="false" onMouseClicked="#closeStage" stylesheets="@style2.css" text="Cancella">
               <HBox.margin>
                  <Insets bottom="60.0" left="80.0" right="80.0" top="40.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
